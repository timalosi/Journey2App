<Alloy>
	<View id="Wrapper" name="Settings">
		<Require type="widget" src="com.mcongrove.navigationBar" id="NavigationBar" text="L('titleSettings')" />
		<ScrollView id="container">
			<TableView id="legal_table" height="90dp">
				<TableViewRow id="terms" title="Terms of Service" hasChild="true" />
				<TableViewRow id="privacy" title="Privacy Policy" hasChild="true" />
			</TableView>
			<TableView id="logs_table" height="90dp">
				<TableViewRow id="logs" title="Email Support" hasChild="true" />
				<TableViewRow id="acknowledgements" title="Acknowledgements" hasChild="true" />
			</TableView>
			<Label text="Visit the Go PDF Support site at"/>
			<Label class="link" url="http://support.snackableapps.com" text="http://support.snackableapps.com" onClick="doLink" />
			<Label id="copyright" />
			<Label id="version" />
			<Label text="Interested in the development of this application?  Check out the story behind the app in the blog series 'Journey 2 App'" />
			<Label class="link" url="http://fivebytes.blogspot.com/2014/01/journey-to-app-writing-and-publishing.html" text="http://fivebytes.blogspot.com/2014/01/journey-to-app-writing-and-publishing.html" onClick="doLink" />
		</ScrollView>
	</View>
</Alloy>